// mcp.json â€” Secure & Modular FleetFusion MCP Configuration
{
  "inputs": [],
  "servers": {
    "neon": {
      "type": "stdio", 
      "command": "npx",
      "args": ["-y", "@neondatabase/mcp-server-neon", "start"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "NEON_API_KEY": "${NEON_API_KEY}"
      }
    },
    "clerk": {
      "type": "stdio",
      "command": "npx", 
      "args": ["-y", "@clerk/agent-toolkit", "start"],
      "env": {
        "CLERK_SECRET_KEY": "${CLERK_SECRET_KEY}",
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY": "${NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY}"
      }
    },
    "git": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@cyanheads/git-mcp-server"],
      "env": {
        "GIT_WORKING_DIRECTORY": "./"
      }
    },
    "github": {
      "type": "stdio", 
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_REPOSITORY": "DigitalHerencia/FleetFusion"
      }
    },
    "filesystem": {
      "type": "stdio",
      "command": "npx", 
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "./"],
      "env": {
        "ALLOWED_DIRECTORIES": ["./src", "./app", "./components", "./lib", "./types", "./config", "./.github"]
      }
    }
  },
  "playwright": {
    "type": "stdio",
    "command": "npx",
    "args": ["@playwright/mcp@latest"]
  }
}
