# Example environment configuration for FleetFusion
# Rename this file to .env.local and update values for local development

# Database connection strings
DATABASE_URL=postgresql://user:password@host:5432/dbname
# Direct connection for migrations (Neon)
DIRECT_URL=postgresql://user:password@host:5432/dbname

# Clerk authentication keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=

# Base application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Vercel Blob storage token (optional, for document uploads)
NEXT_PUBLIC_BLOB_READ_WRITE_TOKEN=
